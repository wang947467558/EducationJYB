<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x134"
        android:layout_height="@dimen/x134"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="@drawable/yuan">

        <TextView
            android:id="@+id/textview_zichang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x45"
            android:text="总资产（创业豆)"
            android:textSize="@dimen/x14" />

        <TextView
            android:id="@+id/tv_zichang_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_zichang"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="36000"
            android:textSize="@dimen/x32"
            android:typeface="normal" />

    </RelativeLayout>


</RelativeLayout>