<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_department"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ccjust.testfragment.activity.EditDepartmentActivity">
    <include layout="@layout/title_bar" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/comment"
        android:orientation="vertical">

        <EditText
            android:textSize="@dimen/x12"
            android:id="@+id/edit_department_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="#00000000"
            android:gravity="center_horizontal|center_vertical"
            android:hint="请输入所在学校" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/fenggexian" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <Button
                android:textSize="@dimen/x12"
                android:id="@+id/btn_department_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_red_round_kuang_bg"
                android:text="确定"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
