<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment"
    android:padding="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:padding="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/item_job_imageview_title"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x50"
            android:src="@drawable/job" />

        <TextView
            android:textColor="@color/black"
            android:textSize="@dimen/x13"
            android:id="@+id/item_job_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/item_job_imageview_title"
            android:text="4G网络工程师" />

        <TextView
            android:textSize="@dimen/x11"
            android:id="@+id/item_job_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:layout_toRightOf="@+id/item_job_imageview_title"
            android:text="科技最前沿" />
<LinearLayout

    android:layout_toRightOf="@+id/item_job_imageview_title"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_job_textview_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x40"
            android:textSize="@dimen/x7"
            android:text="1个小时前" />

        <TextView
            android:id="@+id/item_job_textview_yudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="@dimen/x7"
            android:layout_marginTop="@dimen/x40"
            android:textColor="@color/themeColor"
            android:layout_toRightOf="@+id/item_job_imageview_title"
            android:text="10000人阅" />

        <ImageView
            android:id="@+id/item_job_imageview_zan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/x70"
            android:layout_marginTop="@dimen/x40"
            android:layout_toRightOf="@id/item_job_textview_yudu"
            android:src="@drawable/zan_qj" />

        <TextView
            android:id="@+id/item_job_textview_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x40"
            android:layout_toRightOf="@+id/item_job_imageview_zan"
            android:text="赞"
            android:textSize="@dimen/x10" />
</LinearLayout>
    </RelativeLayout>

</LinearLayout>