<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_yqyou_li"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ccjust.testfragment.activity.YQYouLiActivity">
    <include layout="@layout/title_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginTop="@dimen/x20"
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x223"
            android:src="@drawable/yaoqingyouli" />
        <TextView
            android:textSize="@dimen/x12"
            android:text="邀请码:"
            android:layout_marginLeft="@dimen/x120"
            android:layout_marginTop="@dimen/x110"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/x160"
            android:layout_marginTop="@dimen/x110"
            android:textSize="@dimen/x12"
            android:text="SU42"
            android:textColor="@color/themeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="@dimen/x30"
            android:textSize="@dimen/x12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="邀请码注册，随机获得红包1-3元不等，邀请人数越多红包越多" />
    </RelativeLayout>
</LinearLayout>
