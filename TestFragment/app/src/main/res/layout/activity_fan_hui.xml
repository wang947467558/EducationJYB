<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fan_hui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/comment"
    android:orientation="vertical"
    tools:context="com.example.ccjust.testfragment.activity.FanHuiActivity">

    <include layout="@layout/title_bar" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x8"
        android:text="问题意见"
        android:textSize="@dimen/x13" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:background="#fff"
        android:gravity="left|top"
        android:hint="描述一下你对本产品的意见，或者遇到的问题"
        android:inputType="textMultiLine"
        android:padding="@dimen/x8"
        android:textColor="@color/textblackColor"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/x12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:background="#fff"
        android:orientation="horizontal"
        android:padding="@dimen/x8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话"
            android:textSize="@dimen/x13" />

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/x2"
            android:textColor="@color/textblackColor"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/x13" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/x12"
        android:background="@drawable/btn_yuanjiao"
        android:gravity="center"
        android:padding="@dimen/x8"
        android:text="提交"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_sed"
        android:textSize="@dimen/x13" />
</LinearLayout>
